<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qc.idetest.PlayActivity">

    <RelativeLayout
        android:id="@+id/player_parent"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/ivew_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_play_arrow"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/img_transfer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_percent"
        android:layout_below="@id/player_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="percent"
        />

    <TextView
        android:id="@+id/txt_info"
        android:layout_below="@id/txt_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_error"
        android:layout_below="@id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
